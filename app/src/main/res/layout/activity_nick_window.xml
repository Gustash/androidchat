<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:text="@string/nickTextView"
        android:id="@+id/nickTextView"
        android:layout_above="@+id/nickEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickEditText"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/nickTextView"
        android:layout_alignStart="@+id/nickTextView"
        android:layout_alignRight="@+id/nickTextView"
        android:layout_alignEnd="@+id/nickTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickEditText"
        android:id="@+id/sendButton"
        android:textSize="30sp"
        android:onClick="openChat"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/nickEditText"
        android:layout_alignLeft="@+id/nickEditText"
        android:layout_alignStart="@+id/nickEditText"
        android:layout_alignRight="@+id/nickEditText"
        android:layout_alignEnd="@+id/nickEditText" />
</RelativeLayout>
